<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC 
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>userServiceImp</servlet-name>
  	<servlet-class>com.tangledcode.lang8.server.service.UserServiceImp</servlet-class>
  </servlet>
  
    <servlet>
  	<servlet-name>textServiceImp</servlet-name>
  	<servlet-class>com.tangledcode.lang8.server.service.TextServiceImp</servlet-class>
  </servlet>
  
  
  <servlet>
  	<servlet-name>groupServiceImp</servlet-name>
  	<servlet-class>com.tangledcode.lang8.server.service.GroupServiceImp</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>languageServiceImp</servlet-name>
  	<servlet-class>com.tangledcode.lang8.server.service.LanguageServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>userServiceImp</servlet-name>
  	<url-pattern>/lang8/user</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>groupServiceImp</servlet-name>
  	<url-pattern>/lang8/group</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>languageServiceImp</servlet-name>
  	<url-pattern>/lang8/languages</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>textServiceImp</servlet-name>
  	<url-pattern>/lang8/sendText</url-pattern>
  </servlet-mapping>

</web-app>
