<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel styleName="content">
	<g:VerticalPanel>
		<g:HorizontalPanel>
		<g:Label>Search</g:Label>
			<g:TextBox ui:field="searchItem"></g:TextBox>
			<g:ListBox ui:field="searchPrefs"></g:ListBox>
			<g:Button ui:field="submitBtn" text="Search"></g:Button>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
		<g:VerticalPanel>
			<g:Label ui:field="resultLabel" text="Not searched"></g:Label>
			<g:Label ui:field="resultTitle"></g:Label>
		</g:VerticalPanel>
			<g:Label ui:field="resultContent"></g:Label>
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="commentBox" visible="false">
			<g:Label text="Comment:"></g:Label>
			<g:TextBox ui:field="commentText"></g:TextBox>
			<g:Button ui:field="submitCommentBtn" text="Submit"></g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 