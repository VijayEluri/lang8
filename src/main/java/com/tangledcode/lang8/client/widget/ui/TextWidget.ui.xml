<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<g:HTMLPanel styleName="content">
	<g:VerticalPanel>
		<g:HorizontalPanel>
				<g:Label>Title</g:Label>
				<g:TextBox ui:field="titleText"></g:TextBox>
		</g:HorizontalPanel>
				<g:HorizontalPanel>
				<g:Label>Description</g:Label>
				<g:TextBox ui:field="descriptionText"></g:TextBox>
		</g:HorizontalPanel>
		<g:Label>Content: </g:Label>
		<g:RichTextArea ui:field="textInputField"></g:RichTextArea>	
		<g:HorizontalPanel>
			<g:Label>Select Language</g:Label>
			<g:ListBox ui:field="listBoxLanguage"></g:ListBox>
		</g:HorizontalPanel>	
		<g:Button ui:field="submitBtn" text="Send"></g:Button>	
	</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 